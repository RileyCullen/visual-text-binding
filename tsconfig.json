{ 
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "strict": true,
    "alwaysStrict": true,
    "rootDir": "./src",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "jsx": "react",
    "allowJs": true
  },
  "include": ["src/*.ts", "src/*.d.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
